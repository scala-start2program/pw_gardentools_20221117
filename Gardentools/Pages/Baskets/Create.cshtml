@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Basket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Basket.UserId" class="control-label"></label>
                <select asp-for="Basket.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Basket.ArticleId" class="control-label"></label>
                <select asp-for="Basket.ArticleId" class ="form-control" asp-items="ViewBag.ArticleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Basket.Count" class="control-label"></label>
